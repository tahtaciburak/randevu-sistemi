<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8' />
  <link href='/fullcalendar.min.css' rel='stylesheet' />
  <link href='/fullcalendar.print.min.css' rel='stylesheet' media='print' />
  <script src='/lib/moment.min.js'></script>
  <script src='/fullcalendar.min.js'></script>
  <script src='/locale-all.js'></script>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  
  <script>
    
    $(document).ready(function() {
      var takvimObjesi =       {
        header: {
          left: 'prev,next today',
          center: 'title',
          right: 'month,basicWeek,basicDay'
        },
        locale:'TR',
        themeSystem:'bootstrap3',
        selectable:'true',
        dayClick:function(date){
          $('#exampleModalLong').modal('toggle');
        },
        defaultDate: moment(),
        navLinks: true, // can click day/week names to navigate views
        editable: true,
        eventLimit: true, // allow "more" link when too many events
        events: [],
        eventColor: '#378006',
        eventTextColor: 'white'
      }
      $.ajax(
            {
                url:"/appointments/my/host/",
                success: function(result){
                    all_results = result
                }
            }
        ).done(function(){
          for(var i=0;i<all_results.length;i++){
             takvimObjesi.events.push({
              title: all_results[i].AppointmentHeader,
              start: all_results[i].StartDateTime,
              end: moment(all_results[i].StartDateTime).add(30,'m'),
              color: 'purple'
             })
            }
        })
        $.ajax(
            {
                url:"/appointments/my/guest/",
                success: function(result2){
                    all_results2 = result2
                }
            }
        ).done(function(){
          for(var i=0;i<all_results2.length;i++){
             takvimObjesi.events.push({
              title: all_results2[i].AppointmentHeader,
              start: all_results2[i].StartDateTime,
              color: 'red'
             })
            }
            console.log(all_results2)
            $('#calendar').fullCalendar(takvimObjesi);
        })

    });
    
  </script>
  <style>
    
    body {
      margin: 40px 10px;
      padding: 0;
      font-family: "Lucida Grande",Helvetica,Arial,Verdana,sans-serif;
      font-size: 14px;
    }
    
    #calendar {
      max-width: 900px;
      margin: 0 auto;
    }
    
  </style>
</head>
<body>
  
  <div id='calendar'></div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModalLong" style="padding-top:100px;" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title" id="exampleModalLongTitle">Seçili Tarihe Randevu Aç</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">            
            <form>
              <div class="form-group">
                <label for="baslik">Randevu Başlığı:</label>
                <input type="text" class="form-control" id="baslik" placeholder="Randevu hakkında açıklamanız">
              </div>
              <div class="form-group">
                <label for="sure">Randevu Süresi:</label>
                <input type="text" class="form-control" id="sure" placeholder="Randevu hakkında açıklamanız">
              </div>
              <div class="form-group">
                <label for="lokasyon">Randevu Lokasyonu:</label>
                <input type="text" class="form-control" id="lokasyon" placeholder="Randevu hakkında açıklamanız">
              </div>
              <div class="form-group">
                <label for="aciklama">Randevu Açıklaması:</label>
                <input type="text" class="form-control" id="aciklama" placeholder="Randevu hakkında açıklamanız">
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary " data-dismiss="modal">İptal</button>
            <div id="takeAppointment" type="button" class="btn btn-success btn-block">Onayla</div>
          </div>
        </div>
      </div>
    </div>

</body>
</html>
