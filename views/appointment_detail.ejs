                            <th><b>Tarih</b></th>
                            <th><b>Lokasyon</b></th>
                            <th><b>Sonuc</b></th>
                        </tr>
                    </thead>
                    <tbody id="appointment_list">
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </body>
</html>
